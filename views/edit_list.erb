<section id="todos">
  <header>
    <h2>Editing: "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form action="/lists/<%= @list[:id] %>/delete" method="post">
          <button type="submit">Delete list</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @list[:id] %>/edit" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter a new name for the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists">Cancel</a>
  </fieldset>
</form>