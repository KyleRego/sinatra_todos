<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><a href="/lists/<%= @list[:id] %>/edit">Edit list</a></li>
    </ul>
  </header>

<ul>
  <% @list[:todos].each do |todo| %>
    <li>
      <h3><%= todo[:name] %></h3>
    
      <form action="/lists/<%= @list[:id]%>/todos/<%= todo[:id] %>/delete" method="post" class="delete">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>

</section>

<form action="/lists/<%= @list[:id] %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>

<% content_for :header_links do %>
  <a href="/lists">All Lists</a>
<% end %>