<ul id="lists">
  <% @lists.each do |list| %>
    <% if is_completed(list) && count_todos(list) > 1 %>
      <li class="complete">
    <% else %>
      <li>
    <% end %>
      <a href="/lists/<%= list[:id] %>">
        <h2><%= list[:name] %></h2>
        <p><%= "#{count_completed_todos(list)}/#{count_todos(list)}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>